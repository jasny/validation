{
    "name": "jasny/validation",
    "description": "Jasny skeleton library",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Arnold Daniels",
            "email": "arnold@jasny.net",
            "homepage": "http://www.jasny.net"
        },
        {
            "name": "Sergey Boltonosov",
            "email": "minstriely@gmail.com",
            "homepage": "https://github.com/Minstel"
        }
    ],
    "support": {
        "issues": "https://github.com/jasny/validation/issues",
        "source": "https://github.com/jasny/validation"
    },
    "require": {
        "php": ">=7.1.0",
        "jasny/meta": "dev-master",
        "jasny/entity": "dev-master",
        "jasny/validation-result": "^1.0"
    },
    "require-dev": {
        "jasny/php-code-quality": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Jasny\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jasny\\Validation\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpcs -p src",
            "phpstan analyse src"
        ],
        "post-create-project-cmd": [
            "bash init.sh && rm init.sh"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
